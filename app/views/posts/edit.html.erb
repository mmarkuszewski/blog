<div align="center">

  <h1> Edit </h1>

  <div class="col-4">
    <%= form_for(@post) do |f| %>

      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>

      <%= f.label :content %>
      <%= f.text_area :content, class: 'form-control', rows: '10', cols: '50' %>

      <%= f.submit "Update", class: "btn btn-primary" %>
      <%= link_to "Delete post", post_path, :method => :delete, class: "btn btn-primary" %>

    <% end %>

    <%= render partial: "shared/form_error_msg", locals: {obj: @post} %>

  </div>

</div>