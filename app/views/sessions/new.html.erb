<h1> Login </h1>

<div class="row">
  <div class="col-3">
    <%= form_for(:session) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>

    <%= link_to "Register!", register_path %>
  </div>
</div>