<div class="container">

  <div class="col-10">
    <%= will_paginate @users %>

    <% @users.each do |user| %>

      <!-- Blog user -->
      <div class="card mb-4">
        <div class="card-body">
          <h2 class="card-title"><%= user.email %></h2>
        </div>
        <div class="card-footer text-muted">
          <%= link_to "Delete", admin_user_path(id: user.id), class: "btn btn-primary", method: :delete %>
        </div>
      </div>

    <% end %>

  </div>

</div>
